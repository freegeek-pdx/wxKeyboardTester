#!/usr/bin/make -f

%:
	dh $@

D=debian/$(shell dh_listpackages)

override_dh_auto_install:
	mkdir -p $(D)/usr/bin/
	mkdir -p $(D)/usr/share/
	mkdir -p $(D)/etc/
	cp -a ./bin/keyboard.pl $(D)/usr/bin/wx-keyboard-tester
	cp -a ./data/ $(D)/usr/share/wx-keyboard-tester/
	cp -a wxKeyboardTester.xml $(D)/etc/wxKeyboardTester.xml
